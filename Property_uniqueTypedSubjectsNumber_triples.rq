PREFIX schema: <https://schema.org/>
PREFIX pav: <http://purl.org/pav/>
SELECT (COUNT(DISTINCT ?s) AS ?scount) ?stype ?p (COUNT(?p) AS ?triples) 
WHERE {
    { 
        ?s ?p ?o .
        ?s a ?stype
    }
    UNION
    {
        GRAPH ?g {
            ?s ?p ?o .
            ?s a ?stype 
        }
    }
} 
GROUP BY ?p ?stype
ORDER BY ?stype ?p